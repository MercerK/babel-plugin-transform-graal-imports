{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["DOM", "es2019"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "noImplicitAny": false,
    "outDir": "dist",
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
